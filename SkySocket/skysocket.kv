#:kivy 2.2.0
#:set WHITE [1, 1, 1, 1]

<MainWindow>:
    orientation: 'vertical'
    SkyStatusBar:
        drone_connection: root.drone
        car_connection: root.car
        start_status: simulationtab
    Label:
        size_hint: 1, None
        height: dp(10)
        canvas.before:
            Color:
                rgba: WHITE
            Rectangle:
                size: self.size
                pos: self.pos
    TabbedPanel:
        id: tabpanel
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        do_default_tab: False
        strip_border: [0,0,0,0]
        tab_height: dp(30)
        tab_width: dp(150)
        canvas.before:
            Color:
                rgba: WHITE
            Rectangle:
                size: self.size
                pos: self.pos
        SkySimulationTab:
            id: simulationtab
            link: root.settings.video_source
            drone_connection: root.drone
            car_connection: root.car
            
        SkyTestingTab:
            drone_connection: root.drone
            car_connection: root.car
                
        SkySettingsTab:
